{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"baseUrl": "src",
		"outDir": "out/src",
		"target": "es2018",
		"sourceMap": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"pretty": true,
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2018"]
	},
	"exclude": ["node_modules"]
}
